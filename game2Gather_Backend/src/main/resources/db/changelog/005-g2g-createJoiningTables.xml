<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.7.xsd">

    <changeSet id="createSessionGameVoteTable" author="lam">
        <createTable tableName="session_gamevotes">
            <column name="session_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="gamevote_id" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="session_gamevotes" baseColumnNames="session_id"
                                 constraintName="FK_session_gamevote_Session"
                                 referencedTableName="Session" referencedColumnNames="id"
                                 onDelete="CASCADE"/>
        <addForeignKeyConstraint baseTableName="session_gamevotes" baseColumnNames="gameVote_id"
                                 constraintName="FK_session_gamevote_Gamevote"
                                 referencedTableName="Gamevote" referencedColumnNames="id"
                                 onDelete="CASCADE"/>
    </changeSet>
    <changeSet id="createGameVotePlayerTable" author="lam">
        <createTable tableName="gamevote_player">
            <column name="gamevote_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="player_id" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="gamevote_player" baseColumnNames="player_id"
                                 constraintName="FK_gamevote_player_Player"
                                 referencedTableName="Player" referencedColumnNames="id"
                                 onDelete="CASCADE"/>
        <addForeignKeyConstraint baseTableName="gamevote_player" baseColumnNames="gamevote_id"
                                 constraintName="FK_gamevote_player_GameVote"
                                 referencedTableName="GameVote" referencedColumnNames="id"
                                 onDelete="CASCADE"/>
    </changeSet>
</databaseChangeLog>
